{% extends 'base.html.twig' %}

{% block content %}
    <h1>Portfolio dividends</h1>
    {% block page_contents %}

        <p><a href="{{ path('portfolio_details', {id: portfolioId}) }}">Back to portfolio details</a></p>

        <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col">Number</th>
            <th scope="col">ID</th>
            <th scope="col">Ticker</th>
            <th scope="col">Payout date</th>
            <th scope="col">Price</th>
            <th scope="col">Currency</th>
        </tr>
        </thead>
        <tbody>
        {% for key, dividend in dividends %}
                <tr>
                    <th scope="row">{{ key+1 }}</th>
                    <th>{{ dividend.id }}</th>
                    <td>{{ dividend.stockTicker }}</td>
                    <td>{{ dividend.payoutDate|date('Y-m-d') }}</td>
                    <td>{{ dividend.amount / 100}}</td>
                    <td>{{ dividend.amountCurrency }}</td>
                </tr>
        {% endfor %}
        </tbody>
        </table>

    {% endblock %}
{% endblock %}
